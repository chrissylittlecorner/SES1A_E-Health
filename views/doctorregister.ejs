<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Doctor Registration
        </h1>
        <%- include('./partials/errors') %>
  
        <form action="/doctors/doctorregister" method="POST">
          <div class="form-group">
            <label for="dname"> Name</label>
            <input
              type="dname"
              id="dname"
              name="dname"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof dname != 'undefined' ? dname : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="dqualification">Doctor Qualification</label>
            <input
              type="dqualification"
              id="dqualification"
              name="dqualification"
              class="form-control"
              placeholder="Enter Your Qualification"
              value="<%= typeof dqualification != 'undefined' ? dqualification : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="dlocation">Doctor Location</label>
            <input
              type="dlocation"
              id="dlocation"
              name="dlocation"
              class="form-control"
              placeholder="Enter Location"
              value="<%= typeof dlocation != 'undefined' ? dlocation : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="dpractice">Doctor Practice</label>
            <input
              type="dpractice"
              id="dpractice"
              name="dpractice"
              class="form-control"
              placeholder="Enter Practice"
              value="<%= typeof dpractice != 'undefined' ? dpractice : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="dmobileno">Mobile Number</label>
            <input
              type="dmobileno"
              id="dmobileno"
              name="dmobileno"
              class="form-control"
              placeholder="Enter Mobile Number"
              value="<%= typeof dmobileno != 'undefined' ? dmobileno : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="demail">Email</label>
            <input
              type="email"
              id="demail"
              name="demail"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof demail != 'undefined' ? demail : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="dpassword">Password</label>
            <input
              type="password"
              id="dpassword"
              name="dpassword"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof dpassword != 'undefined' ? dpassword : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="dpassword2">Confirm Password</label>
            <input
              type="password"
              id="dpassword2"
              name="dpassword2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof dpassword2 != 'undefined' ? dpassword2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/doctors/doctorlogin">Login</a></p>
      </div>
    </div>
  </div>