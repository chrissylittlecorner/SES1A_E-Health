<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Patient Registration
      </h1>
      <%- include('./partials/errors') %>

      <form action="/patients/register" method="POST">
        <div class="form-group">
          <label for="name"> Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="mdcno">Medicare Card Number</label>
          <input
            type="mdcno"
            id="mdcno"
            name="mdcno"
            class="form-control"
            placeholder="Enter Medicare Card Number"
            value="<%= typeof mdcno != 'undefined' ? mdcno : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="mobileno">Mobile Number</label>
          <input
            type="mobileno"
            id="mobileno"
            name="mobileno"
            class="form-control"
            placeholder="Enter Mobile Number"
            value="<%= typeof mobileno != 'undefined' ? mobileno : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/patients/login">Login</a></p>
    </div>
  </div>
</div>